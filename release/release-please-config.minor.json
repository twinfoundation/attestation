{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"description": "Auto-Generated Release Please configuration for minor",
	"pull-request-title-pattern": "chore: minor release prepared",
	"pull-request-header": "chore: minor release prepared",
	"pull-request-footer": "This PR was generated by the prepare-release GHA",
	"release-type": "node",
	"versioning": "always-bump-minor",
	"packages": {
		"packages/attestation-models": {
			"package-name": "attestation-models",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/attestation-connector-nft": {
			"package-name": "attestation-connector-nft",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/attestation-connector-open-attestation": {
			"package-name": "attestation-connector-open-attestation",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/attestation-service": {
			"package-name": "attestation-service",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/attestation-rest-client": {
			"package-name": "attestation-rest-client",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"apps/attestation-cli": {
			"package-name": "attestation-cli",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/cli.ts", "tests/cli.spec.ts", "src/index.ts"]
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"attestation-models",
				"attestation-connector-nft",
				"attestation-connector-open-attestation",
				"attestation-service",
				"attestation-rest-client",
				"attestation-cli"
			]
		}
	]
}
